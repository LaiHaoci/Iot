<Window x:Class="IotDeviceManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:IotDeviceManager.Converters"
        mc:Ignorable="d"
        Title="IoT Device Manager"
        Height="700"
        Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <conv:BoolToBrushConverter x:Key="BoolToBrushConverter" />
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:BoolToTextConverter x:Key="TextConverter" />

       
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FFAF4C5E"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF458DA0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Search Bar -->
            <RowDefinition Height="3*"/>
            <!-- Device List -->
            <RowDefinition Height="Auto"/>
            <!-- Action Buttons -->
            <RowDefinition Height="2*"/>
            <!-- Log -->
        </Grid.RowDefinitions>

        <!-- Search in center -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10">
            <!-- Search Box -->
            <Border CornerRadius="15" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" Padding="5">
                <TextBox Width="300" Height="30"
                         BorderThickness="0"
                         Background="Transparent"
                         FontSize="14"
                         Foreground="#333333"
                         Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Search by name, type, or IP"/>
            </Border>

            <!-- Search Button -->
            <Button Content="Search" Command="{Binding UpdateCommand}" Width="100" Height="30" Margin="10,0,0,0"
                    Style="{StaticResource RoundedButtonStyle}"/>
        </StackPanel>

        <!-- Device List -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ListBox ItemsSource="{Binding FilteredDevices}"
                     SelectedItem="{Binding SelectedDevice}"
                     BorderThickness="0"
                     Background="Transparent">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="10" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10" Width="200">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding Type}" FontStyle="Italic"/>
                                <TextBlock Text="{Binding IPAddress}" FontSize="12"/>
                                <TextBlock Text="{Binding LastUpdated}" FontSize="10"/>
                                <TextBlock Text="{Binding IsOnline, Converter={StaticResource TextConverter}}"
           Foreground="{Binding IsOnline, Converter={StaticResource BoolToBrushConverter}}"/>

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0,10">
            <Border CornerRadius="15" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" Padding="2" Margin="5">
                <Button Content="Add Device" Width="100" Height="30" Click="OpenAddDeviceWindow"
                Style="{StaticResource RoundedButtonStyle}" BorderThickness="0"/>
            </Border>

            <Border CornerRadius="15" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" Padding="2" Margin="5">
                <Button Content="Update" Command="{Binding UpdateCommand}" Width="100" Height="30"
                Style="{StaticResource RoundedButtonStyle}" BorderThickness="0"/>
            </Border>

            <Border CornerRadius="15" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" Padding="2" Margin="5">
                <Button Content="Delete" Command="{Binding DeleteCommand}" Width="100" Height="30"
                Style="{StaticResource RoundedButtonStyle}" BorderThickness="0"/>
            </Border>

            <Border CornerRadius="15" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" Padding="2" Margin="5">
                <Button Content="Toggle Status" Command="{Binding ToggleStatusCommand}" Width="120" Height="30"
                Style="{StaticResource RoundedButtonStyle}" BorderThickness="0"/>
            </Border>

            <Border CornerRadius="15" BorderBrush="#DDDDDD" BorderThickness="1" Background="White" Padding="2" Margin="5">
                <Button Content="View Logs" Width="120" Height="30" Click="OpenLogPage"
                Style="{StaticResource RoundedButtonStyle}" BorderThickness="0"/>
            </Border>
        </StackPanel>


    </Grid>
</Window>
