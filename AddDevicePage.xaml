<Window x:Class="IotDeviceManager.AddDeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Device"
        Height="280"
        Width="420"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FFAF4C5E"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="MinHeight" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="15" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RoundedPanelStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="8"/>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Add a new device" FontSize="18" FontWeight="Bold" 
                       Margin="0,0,0,10" HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" Margin="0,5">
                <TextBlock Text="Device Name" Margin="2,0,0,2"/>
                <Border Style="{StaticResource RoundedPanelStyle}">
                    <TextBox BorderThickness="0" Background="Transparent" 
                             Text="{Binding NewDeviceName, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" Margin="0,5">
                <TextBlock Text="Device Type" Margin="2,0,0,2"/>
                <Border Style="{StaticResource RoundedPanelStyle}">
                    <TextBox BorderThickness="0" Background="Transparent" 
                             Text="{Binding NewDeviceType, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="3" Margin="0,5">
                <TextBlock Text="IP Address (e.g. 192.168.1.10)" Margin="2,0,0,2"/>
                <Border Style="{StaticResource RoundedPanelStyle}">
                    <TextBox BorderThickness="0" Background="Transparent" 
                             Text="{Binding NewDeviceIPAddress, UpdateSourceTrigger=PropertyChanged}" />
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button Content="Add" Command="{Binding AddCommand}" 
                        Width="100" Margin="10,0" Style="{StaticResource RoundedButtonStyle}"/>
                <Button Content="Back" Click="Back_Click" 
                        Width="100" Margin="10,0" Style="{StaticResource RoundedButtonStyle}"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
